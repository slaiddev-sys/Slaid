# Slaid Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Anthropic API (for AI generation)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Polar Configuration (for payments)
NEXT_PUBLIC_POLAR_SH_PUBLIC_ACCESS_TOKEN=your-polar-token-here
NEXT_PUBLIC_POLAR_PRO_MONTHLY_PRODUCT_ID=your-monthly-product-id
NEXT_PUBLIC_POLAR_PRO_YEARLY_PRODUCT_ID=your-yearly-product-id

# Base URL (update for production)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Google OAuth Configuration (for Google Slides export)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
